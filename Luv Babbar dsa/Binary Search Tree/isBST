#include<bits/stdc++.h>
using namespace std;

class Node
{
  public:
   int key;
   Node *left;
   Node *right;

   Node(int key){
       this->key = key;
       left = right  = NULL;
   }
};

bool isBSTUtil(Node* root, int min, int max)
{
      if(root==NULL)
    {
        return true;
    }
    
    if(root->key< min or root->key >max)
    {
        return false;
    }
    return isBSTUtil(root->left,min,root->key) and  isBSTUtil(root->right, root->key, max);
}

bool isBST(Node * root)
{
    //complete this method
    // base case 
    // if(root==NULL)
    // {
    //     return ;
    // }
    
    // if(root->left>root->key)
    // {
    //     return false;
    // }
    
    // if(root->right<root->key)
    // {
    //     return false;
    // }
    
    // return true;
      return isBSTUtil(root, INT_MIN,INT_MAX);
    
    
}
