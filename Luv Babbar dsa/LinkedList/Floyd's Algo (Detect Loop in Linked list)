class Solution
{
    public:
    //Function to check if the linked list has a loop.
    
    // using floyd's algorithm 
    bool detectLoop(Node* head)
    {
        Node*slow=head;
        Node*fast =head;
        while(fast!=NULL and fast->next!=NULL)
        {
            slow=slow->next;
            fast=fast->next->next;
            if(slow==fast)
            {
                return true;
            }
        }
        return false;
        // your code here
    }
};
