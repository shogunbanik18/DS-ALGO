#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int a,b;
    string s={'0', '0', '0','1', '0'};
    cin>>a>>b;
    // cin>>s;
    
    int count1=0,count2=0;
    for(int i=0;i<s.size();i++)
    {
        if(s[i]=='0')
        {
            count1++;
        }
        else if(s[i]=='1')
        {
            count2++;
        }
    }
    
    int res= count1*a+count2*b;
    cout<<res<<endl;
}
